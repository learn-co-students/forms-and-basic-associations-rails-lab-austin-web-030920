<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br /><br>
  <%= f.label :artist %><br>
  <%= f.text_field :artist_name %>
  <br><br>
  <%= f.label :genre %><br>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
  <br><br>
  
  <%= f.fields_for :notes_attributes do |note_form| %>
    <%# See: https://api.rubyonrails.org/v5.2.3/classes/ActionView/Helpers/FormHelper.html#method-i-fields_for %>
    <%= note_form.label "Notes"" %><br>
    <%= note_form.text_area :content, rows: 5, cols: 50 %>
    <br/>
  <% end %>

  <%= f.submit %>
<% end %>


